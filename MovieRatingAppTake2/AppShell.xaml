<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MovieRatingAppTake2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:MovieRatingAppTake2.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="#121212"
    Shell.TabBarTitleColor="White"
    Shell.TabBarUnselectedColor="#545454">

    <TabBar>
        <ShellContent
        Title="Movies"
        Icon="cinema"
        ContentTemplate="{DataTemplate pages:MoviesPage}"
        Route="MoviesPage"
        x:Name="MoviesTab"/>
        <ShellContent
        Title="Home"
        Icon="hometab"
        ContentTemplate="{DataTemplate pages:Home}"
        Route="Home"
        x:Name="HomeTab"/>
        <ShellContent
        Title="Rated"
        Icon="rate"
        ContentTemplate="{DataTemplate pages:MoviesRated}"
        Route="MoviesRated"
        x:Name="RatedMovies"/> 
    </TabBar>

</Shell>
